#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for staged files
npx lint-staged

# Run type checking
echo "ğŸ”§ Running TypeScript type checking..."
npx tsc --noEmit

# Run tests related to staged files
echo "ğŸ§ª Running tests for staged files..."
npm run test:staged

# Check for TODO/FIXME comments in staged files
echo "ğŸ“ Checking for TODO/FIXME comments..."
git diff --cached --name-only | xargs grep -l "TODO\|FIXME" 2>/dev/null && echo "âš ï¸  Warning: TODO/FIXME comments found in staged files" || echo "âœ… No TODO/FIXME comments found"

# Check for console.log statements (except console.warn and console.error)
echo "ğŸš« Checking for console.log statements..."
git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | xargs grep -l "console\.log" 2>/dev/null && echo "âŒ Error: console.log statements found in staged files" && exit 1 || echo "âœ… No console.log statements found"

# Check for debugger statements
echo "ğŸ› Checking for debugger statements..."
git diff --cached --name-only | grep -E '\.(js|jsx|ts|tsx)$' | xargs grep -l "debugger" 2>/dev/null && echo "âŒ Error: debugger statements found in staged files" && exit 1 || echo "âœ… No debugger statements found"

# Check for merge conflict markers
echo "ğŸ”€ Checking for merge conflict markers..."
git diff --cached --name-only | xargs grep -l "<<<<<<< HEAD\|>>>>>>> \|=======" 2>/dev/null && echo "âŒ Error: Merge conflict markers found in staged files" && exit 1 || echo "âœ… No merge conflict markers found"

echo "âœ… Pre-commit checks completed successfully!"
